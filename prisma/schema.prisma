generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  PROFESOR
  ALUMNO
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  roles     Role[]   @default([ALUMNO])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  teacher   Teacher?
  student   Student?
}

model Student {
  id              String   @id @default(uuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id])
  
  // Datos del alumno
  firstName       String              // Nombre alumno
  lastName        String?             // Apellido alumno (opcional)
  
  // Datos del tutor/padre
  parentEmail     String?             // Email Padre
  tutorFirstName  String?             // Nombre Tutor
  tutorLastName   String?             // Apellido Tutor
  
  // Datos académicos
  grade           String?             // Clase/Curso (ej: "5to grado", "2do año")
  school          String?             // Escuela
  
  // Relaciones
  bookings        Booking[]
  recurringGroups RecurringGroup[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Teacher {
  id              String           @id @default(uuid())
  userId          String           @unique
  user            User             @relation(fields: [userId], references: [id])
  firstName       String
  lastName        String
  bio             String?
  maxCapacity     Int              @default(1)
  
  subjects        Subject[]
  availability    Availability[]
  bookings        Booking[]
  recurringGroups RecurringGroup[]
}

model Subject {
  id        String   @id @default(uuid())
  name      String
  level     String
  
  teachers        Teacher[]
  bookings        Booking[]
  recurringGroups RecurringGroup[]
}

model Availability {
  id        String   @id @default(uuid())
  teacherId String
  teacher   Teacher  @relation(fields: [teacherId], references: [id])
  dayOfWeek Int      // 0-6 (Sunday-Saturday) or 1-7 (Monday-Sunday) - Let's use 0=Sunday
  startTime String   // "HH:mm"
  endTime   String   // "HH:mm"
}

model Booking {
  id               String          @id @default(uuid())
  studentId        String
  student          Student         @relation(fields: [studentId], references: [id])
  teacherId        String
  teacher          Teacher         @relation(fields: [teacherId], references: [id])
  subjectId        String?
  subject          Subject?        @relation(fields: [subjectId], references: [id])
  recurringGroupId String?
  recurringGroup   RecurringGroup? @relation(fields: [recurringGroupId], references: [id])
  date             DateTime
  startTime        String
  endTime          String
  status           String          @default("PENDING") // PENDING, CONFIRMED, CANCELLED
  confirmed        Boolean         @default(false)     // Solo ADMIN puede confirmar
  
  createdAt        DateTime        @default(now())
}

model RecurringGroup {
  id        String   @id @default(uuid())
  studentId String
  student   Student  @relation(fields: [studentId], references: [id])
  teacherId String
  teacher   Teacher  @relation(fields: [teacherId], references: [id])
  subjectId String?
  subject   Subject? @relation(fields: [subjectId], references: [id])
  dayOfWeek Int      // 0-6 (Sunday-Saturday)
  startTime String   // "HH:mm"
  endTime   String   // "HH:mm"
  month     Int      // 1-12
  year      Int      // e.g., 2026
  createdAt DateTime @default(now())

  bookings  Booking[]
}
